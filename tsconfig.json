{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["./app/*"],
      "@app/*": ["./app/*"],
      "@package/*": ["./package/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
