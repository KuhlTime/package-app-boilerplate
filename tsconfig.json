{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2015", // ES6
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": false,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"]
}
